{
  "version": 2,
  "builds": [
    {
      "src": "multiple-trading-bots/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/ws/(.*)",
      "dest": "backend/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
